<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - VS2247A5</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="VS2247A5" />
    <meta name="application-name" content="$semesterCode$-$guid1$" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/44.0.0/ckeditor5.css" />
    <link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5-premium-features/44.0.0/ckeditor5-premium-features.css" />

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #e3f2fd;">
        <div class="container">
            @Html.ActionLink("Show Biz", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Genre", "Index", "Genre", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Actor", "Index", "Actor", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Show", "Index", "Show", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Episode", "Index", "Episode", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Load Data
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Role", "Roles", "LoadData", new { area = "" }, new { @class = "dropdown-item" })</li>
                            @if (User.IsInRole("Administrator"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Genre", "Genres", "LoadData", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Actor", "Actors", "LoadData", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Show", "Shows", "LoadData", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Episode", "Episodes", "LoadData", new { area = "" }, new { @class = "dropdown-item" })</li>
                            }
                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <small>
                    By submitting this assignment you agree to the following:
                    I declare that this assignment is my own work in accordance with the Seneca Academic
                    Policy. No part of this assignment has been copied manually or electronically from
                    any other source (including web sites) or distributed to other students.
                </small>
            </p>
            <p>&copy; Vanshika Sharma, vsharma176@myseneca.ca, WEB524, Fall 2024</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.ckeditor.com/ckeditor5/44.0.0/ckeditor5.umd.js"></script>
    }
    @RenderSection("scripts", required: false)

</body>
</html>
